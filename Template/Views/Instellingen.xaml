<!-- Bishmillah -->
<ContentControl x:Class="Template.Views.Instellingen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Template.Views"
      mc:Ignorable="d"
      d:DesignHeight="400" d:DesignWidth="800">
    <Grid Margin="20">
        <Border 
            BorderBrush="#333333" 
            Background="#efde93" 
            BorderThickness="1" 
            Padding="40" 
            Margin="25" 
            CornerRadius="20" 
            MaxHeight="310px">
        <StackPanel>
            <TextBlock 
                Foreground="#333333" 
                Text="Instelling 1:" Margin="0,0,0,5"/>
            <TextBox Name="TextBox1" 
                     Text="Prefix 1" 
                     TextChanged="TextBox_1" 
                     Margin="0,0,0,20"/>

            <TextBlock Foreground="#333333" 
                       Text="Gebruikersnaam:" 
                       Margin="0,0,0,5"/>
            <TextBox Name="UsernameTextBox" 
                     Margin="0,0,0,20"/>

            <TextBlock Foreground="#333333" 
                       Text="Wachtwoord:" 
                       Margin="0,0,0,5"/>
            <PasswordBox Name="PasswordBox" 
                         Margin="0,0,0,20"/>

            <Button 
                Style="{StaticResource SubmitButtonTheme}"
                Content="Submit" 
                Click="Submit_Click" 
                Margin="0,20,0,0" 
                Width="150px"/>
        </StackPanel>
        </Border>
    </Grid>
</ContentControl>
