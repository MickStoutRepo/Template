<!-- Bishmillah -->
<Window x:Class="Template.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Template" Height="1000" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="25" BorderBrush="#333333">
        <Border CornerRadius="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1">
                    <GradientStop Color="#28AFB0" 
                                  Offset="0.4"/>
                    <GradientStop Color="#FFA5AB" 
                                  Offset="0.95"/>
                </LinearGradientBrush>
            </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border
                    Margin="0,20,0,0" 
                    VerticalAlignment="Center">
                <Image Source="" 
                       Width="150" 
                       Height="75"/>
            </Border>
            <StackPanel Grid.Row="1" Grid.Column="0">
                <TextBlock>
                    <LineBreak/>
                    <LineBreak/>
                    <LineBreak/>
                </TextBlock>
                <RadioButton Content="Button 1" 
                             Height="50" 
                             Foreground="#efde93" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="Content1"
                             x:Name="Button1"/>
                <RadioButton Content="Button 2" 
                             Height="50" 
                             Foreground="#efde93" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="Content2"
                             x:Name="Button2"/>
                <RadioButton Content="Button 3" 
                             Height="50" 
                             Foreground="#efde93" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="Content3"
                             x:Name="Button3"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" 
                        HorizontalAlignment="Right">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource SettingsButtonTheme}"
                            Width="30" 
                            Height="30" 
                            BorderThickness="1" 
                            IsHitTestVisible="True"
                            Margin="0,10,10,0"
                            Panel.ZIndex="1"
                            Click="Instellingen_Click"
                            x:Name="InstellingenButton">
                        <fa:IconBlock Icon="Gear" Foreground="#FFA5AB" />
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="1" Content="-"
                            Style="{StaticResource SettingsButtonTheme}"
                            Width="30" 
                            Height="30"
                            FontWeight="Heavy"
                            FontSize="20"
                            Foreground="#FFA5AB"
                            BorderThickness="1"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,10,10,0"
                            Click="Minimaliseren_Click"
                            IsHitTestVisible="True"
                            Panel.ZIndex="1"
                            x:Name="MinimaliserenButton">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            <Button Grid.Row="0" Grid.Column="2" Content="X"
                    Style="{StaticResource CloseButtonTheme}"
                    Width="30" 
                    BorderThickness="1"
                    Height="30"
                    FontWeight="Heavy"
                    Foreground="#FFA5AB"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,10,10,0"
                    Click="Afsluiten_Click"
                    IsHitTestVisible="True"
                    Panel.ZIndex="1">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                </Button>
                </Grid>
            </StackPanel>
            <Frame x:Name="MainFrame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden"/>
            <Border BorderBrush="#34143e" 
                    Grid.Row="1" 
                    Grid.Column="1"  
                    BorderThickness="1" 
                    Padding="20" 
                    Margin="0,25,25,25" 
                    CornerRadius="20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,1">
                                <GradientStop Color="#d7e9f4" 
                                              Offset="0.4"/>
                                <GradientStop Color="#f7f5f7" 
                                              Offset="0.95"/>
                        </LinearGradientBrush>
                        </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#34143e" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5"/>
                    </Border.Effect>
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </Border>
    </Border>
</Window>

